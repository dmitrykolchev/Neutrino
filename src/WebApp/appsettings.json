{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Warning",
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "Orleans": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Address}] (Td={ThreadId}, User={UserName}) {SourceContext:l}, {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/webapp-.log",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Address}] (Td={ThreadId}, User={UserName}) {SourceContext:l}, {Message:lj}{NewLine}{Exception}",
                    "fileSizeLimitBytes": 10000000,
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 10,
                    "shared": true
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
