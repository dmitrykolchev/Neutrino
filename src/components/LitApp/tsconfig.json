{
    "compilerOptions": {
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "declarationDir": "./src/dts",
        "noEmitOnError": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "target": "ES2023",
        "lib": [ "DOM", "ES2023" ],
        "module": "ES2022"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "wwwroot",
        "src/dts"
    ]
}
