{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "declarationDir": "./dist/dts",
        "outDir": "./dist/esm",
        "noEmitOnError": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "target": "ES2020",
        "lib": [ "DOM", "ES2020" ],
        "module": "ES2020",
        "baseUrl": ".",
        "moduleResolution": "Node"
        //"paths": {
        //    "@microsoft/signalr": [ "../signalr/dist/signalr.js" ],
        //    "@msgpack/msgpack": [ "../msgpack/dist/msgpack.js" ]
        //}
    },
    "include": [ "./src/**/*.ts" ],
    "exclude": [
        "node_modules"
    ]
}
